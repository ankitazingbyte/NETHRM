<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>
    <div class="row">
        <div class="col-md-4">
                  <div class="form-group">
                    <label>Email</label>
                    <span class="help">e.g. "coderpixel@gmail.com" (Unique For every User)</span>
                    <%= form.email_field :email, class: "form-control" %>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <span class="help">Leave blank if you no need to change password</span>
                    <%= form.password_field :password, class: "form-control" %>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <span class="help">Leave blank if you no need to change password</span>
                    <%= form.password_field :password_confirmation, class: "form-control" %>
                </div>
                <div class="form-group">
                    <label>User Role</label>
                    <%= select_tag 'role', options_for_select( Role.all.reject{|u| u.name == "admin"}.collect{|u|[u.name]})%> 
                </div>
            <%= form.fields_for resource.build_employee do |ff|%>

                <div class="form-group">
                <label>First Name</label>
                <%= ff.text_field :first_name,class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <%= ff.text_field :last_name, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Employee Code</label>
                <span class="help">e.g. "546814" (Unique For every User)</span>
                <%= ff.text_field :employee_code, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Username</label>
                <span class="help">e.g. "employee" (Unique For every User)</span>
                <%= ff.text_field :user_name, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Picture</label>
                <%= ff.file_field :image, class: "form-control" %>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="el3">Department</label>
                <%= ff.select :department_id, Department.all.map{|d| [d.name, d.id]}, class: "btn dropdown-toggle btn-default" %>
            </div>
            <div class="form-group">
                <label for="el3">Designation</label>
                <%= ff.select :designation_id, Designation.all.map{|d| [d.name, d.id]}, class: "btn dropdown-toggle btn-default" %>
            </div>
            <div class="form-group">
                <label>Tax Template</label>
                <%= ff.select :tax_example, %w{TaxRule1 15000 PPn}, :prompt => 'Select', required: true, placeholder: 'Tax', class: 'form-control' %>
            </div>
            <div class="form-group">
                <label>Date Of Join</label>
                <%= ff.text_field :date_of_join, class: "form-control", "data-provide" => 'datepicker' %>
            </div>
            <div class="form-group">
                <label>Date Of Leave</label>
                <%= ff.text_field :date_of_leave, class: "form-control", "data-provide" => 'datepicker' %>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <%= ff.text_field :phone, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Alternative Phone</label>
                <%= ff.text_field :alternative_phone, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Status</label>
                <%= ff.select :status, %w{Active Inactive}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Father Name</label>
                <%= ff.text_field :mother, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Mother Name</label>
                <%= ff.text_field :father, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Date Of Birth</label>
                <%= ff.text_field :date_of_birth, class: "form-control", "data-provide" => 'datepicker' %>
            </div>
            <div class="form-group">
                <label>Gender</label>
                <%= ff.select :gender, %w{male Female}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
            </div>
            <div class="form-group">
                <label>Present Address</label>
                <%= ff.text_area :present_address, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Permanent Address</label>
                <%= ff.text_area :permanent_address, class: "form-control" %>
            </div>
        </div>
                    <% end %>

        <div class="col-md-12">
            <%= form.submit  "submit", class: "btn btn-success pull-right" %>
        </div>
    </div>
   

<% end %>
