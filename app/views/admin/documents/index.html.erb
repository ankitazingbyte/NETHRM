<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= link_to "Download Resume", document.attachment_url %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_admin_document_path(document) %></td>
        <td><%= link_to 'Destroy', admin_document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

