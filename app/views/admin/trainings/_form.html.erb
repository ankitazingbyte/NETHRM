<%= form_for @training, :url => admin_trainings_path do |form| %>
    <div class="modal-body">
        <div class="form-group">
            <label>Employee</label>
            <%= form.select :employee_id, Employee.all.map{|e| [e.first_name, e.id]}, class: "btn dropdown-toggle btn-default" %>
        </div>

        <div class="form-group">
            <label>Training Type</label>
            <%= form.select :training_type, %w{Employees-development IT-Training Finance-training }, :prompt => 'Select', required: true, placeholder: 'Training Type', class: 'form-control' %>
        </div>

        <div class="form-group">
            <label>Training Subject</label>
            <%= form.select :training_subject, %w{online-training seminar workshop hand-on-training webnair }, :prompt => 'Select', required: true, placeholder: 'Training Type', class: 'form-control' %>
        </div>

        <div class="form-group">
            <label>Nature Of Training</label>
            <%= form.select :nature, %w{Internal External}, :prompt => 'Select', required: true, class: 'form-control' %>
        </div>

        <div class="form-group">
            <label>Training Title</label>
            <%= form.text_field :title, class: "form-control",onKeyPress: "return ValidateAlpha(event);", required: true %>
        </div>

        <div class="form-group">
            <label>Trainer</label>
            <%= form.select :trainer_id, Trainer.all.map{|e| [e.first_name, e.id]}, class: "btn dropdown-toggle btn-default", required: true  %>
        </div>

        <div class="form-group">
            <label>Training Location</label>
            <%= form.text_field :location, class: "form-control", required: true  %>
        </div>

        <div class="form-group">
            <label>Sponsored By</label>
            <%= form.text_field :sponsored_by, class: "form-control", required: true, onKeyPress: "return ValidateAlpha(event);"  %>
        </div>

        <div class="form-group">
            <label>Organized By</label>
            <%= form.text_field :organized_by, class: "form-control", required: true, onKeyPress: "return ValidateAlpha(event);"  %>        
        </div>

        <div class="form-group">
            <label>Training From</label>
            <%= form.text_field :training_from, class: "form-control", "data-provide" => 'datepicker', required: true  %>
        </div>

        <div class="form-group">
            <label>Training To</label>
            <%= form.text_field :training_to, class: "form-control", "data-provide" => 'datepicker', required: true  %>
        </div>

        <div class="form-group">
            <label>Training Description</label>
            <%= form.cktext_area :description, class: "form-control", required: true  %>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" name="_token" value="iDagcZBRhIoGlecLnwH8hlhihh6XILWCmZWpbR5i">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
<% end %>
<!-- For Alphabates Only -->
<script type="text/javascript">
    function isNumberKey(evt){  <!--Function to accept only numeric values-->
    //var e = evt || window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode
    if (charCode != 46 && charCode > 31 
    && (charCode < 48 || charCode > 57))
        return false;
        return true;
    }
           
    function ValidateAlpha(evt)
    {
        var keyCode = (evt.which) ? evt.which : evt.keyCode
        if ((keyCode < 65 || keyCode > 90) && (keyCode < 97 || keyCode > 123) && keyCode != 32)
         
        return false;
            return true;
    }
</script>
<!-- NUMERIC filed E not allow  -->
<script>
    $("input[type='number']").on('keydown',function(e){
        return e.keyCode == 69 ? false : true
    })
</script>