<%= form_for @notice, :url => admin_notices_path do |form| %>
    <% if @notice.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@notice.errors.count, "error") %> prohibited
            this notice from being saved:
          </h2>
          <ul>
            <% @notice.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="modal-body">
        <div class="form-group">
            <label>Notice Title</label>
            <%= form.text_field :title, class: "form-control" %> 
        </div>
        <div class="form-group m-none">
            <label for="e20">Notice Status</label>
            <%= form.select :status, %w{Published Unpublished}, :prompt => 'Select', required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
            <label>Description</label>
            <%= form.text_area :description, class: "form-control ckeditor" %>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" name="_token" value="LypliyuC3SOSDwNkDSb5qXWJI2ZXxaLb0KeBm20u">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
<% end %>