<section class="wrapper-bottom-sec">
    <div class="p-30">
        <h2 class="page-title">Edit Salary Increament</h2>
    </div>
    <div class="p-30 p-t-none p-b-none">
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title"> Edit Salary Increament</h3>
                    </div>
                    <div class="panel-body">
        				<%= form_for @increament, :url => admin_increaments_path do |form| %>
                            <% if @increament.errors.any? %>
                                <div id="error_explanation">
                                  <h2><%= pluralize(increament.errors.count, "error") %> prohibited this admin_increament from being saved:</h2>

                                  <ul>
                                  <% increament.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                  <% end %>
                                  </ul>
                                </div>
                            <% end %>

                            <div class="form-group">
                                <label>Employee</label>
                                <%#= form.select :employee_id, Employee.all.map{|d| [d.first_name, d.id]}, class: "form-control selectpicker" %>
                            </div>

                            <div class="form-group">
                                <label>Designaion</label>
                                <%= form.select :designation_id, Designation.all.map{|d| [d.name, d.id]}, class: "form-control selectpicker" %>
                            </div>

                            <div class="form-group">
                                <label>Current Salary</label>
                                <%= form.number_field :current_salary, class: "form-control" %>
                            </div>

                            <div class="form-group">
                                <label>Increament Salary</label>
                                <%= form.number_field :increament_salary, class: "form-control" %>
                            </div>
                            <%= form.submit "Update", class: "btn btn-primary" %>
                        <% end %>
        			</div>
        		</div>
        	</div>
        </div>
    </div>
</section>
