<%= form_for @salslip, :url => admin_salslips_path do |form| %>
  <% if @salslip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(salslip.errors.count, "error") %> prohibited this salslip from being saved:</h2>

      <ul>
      <% salslip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <div class="field">
      <%= form.label :employee_id %>
      <%#= form.select :employee_id, Employee.all.map{|e| [e.user_name, e.id]}, class: "btn dropdown-toggle btn-default" %>
    </div>

    <div class="field">
      <%= form.label :department_id %>
      <%= form.select :department_id, Department.all.map{|d| [d.name, d.id]}, class: "btn dropdown-toggle btn-default", required: true %>
    </div>

    <div class="field">
      <%= form.label :designation_id %>
      <%= form.select :designation_id, Designation.all.map{|d| [d.name, d.id]}, class: "btn dropdown-toggle btn-default", required: true %>
    </div>

    <div class="field">
      <%= form.label :basic_salary %>
      <%= form.number_field :basic_salary, class: "form-control", required: true %>
    </div>

    <div class="field">
      <%= form.label :payment_by %>
      <%= form.text_field :payment_by, class: "form-control", required: true %>
    </div>

    <div class="field">
      <%= form.label :tax %>
      <%= form.number_field :tax, class: "form-control", required: true %>
    </div>

    <div class="field">
      <%= form.label :provident_fund %>
      <%= form.number_field :provident_fund, class: "form-control", required: true %>
    </div>

    <div class="field">
      <%= form.label :loan %>
      <%= form.number_field :loan, class: "form-control", required: true %>
    </div>

    <div class="field">
      <%= form.label :Leave_deduction %>
      <%= form.number_field :Leave_deduction, class: "form-control", required: true %>
    </div>

    <div class="field">
      <%= form.label :grand_total %>
      <%= form.number_field :grand_total, class: "form-control", required: true %>
    </div>
    <div class="modal-footer">
        <%= form.submit "Add", class: "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
<% end %>
<script type="text/javascript">
    $("input[type='number']").on('keydown',function(e){
        return e.keyCode == 69 ? false : true
    })
</script>