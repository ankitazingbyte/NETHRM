<section class="wrapper-bottom-sec">
  <div class="p-30">
    <div class="row">
      <div class="col-sm-8">
        <h2 class="page-title p-b-15">Payment Salary Details</h2>
      </div>
      <div class="text-right">
        <div class="col-sm-2 text-right">
          <%= link_to 'Print Payslip', 'your_link_here', :onclick => 'window.print();return false;', class: "btn btn-primary btn-animated from-left fa fa-print" %>
        </div>
        <div class="col-sm-2 text-right">
          <p id="pdf_link"><%= link_to "Generate PDF", admin_salslip_path(@salslip, :format => "pdf"), class: "btn btn-success btn-animated from-left fa fa-file-pdf-o" %></p>
        </div>
        </a>
      </div>
    </div>
  </div>
  <div class="p-30 p-t-none p-b-none">
    <div class="panel">
      <div class="panel-heading p-b-none">
        <h3>Payslip<br><small>Salary Month: February, 2018</small></h3>
      </div>
      <div class="panel-body p-none m-b-10">
        <table class="table table-no-border table-condensed">
          <tbody>
            <tr>
              <td><strong class="help-split">Employee ID:</strong><%= @salslip.employee_id %></td>
              <td><strong class="help-split">Employee Name:</strong><%= Employee.where(id: @salslip.employee_id)[0].first_name if @salslip.employee_id %></td>
              <td><strong class="help-split">Payslip NO:</strong><%= @salslip.id %></td>
            </tr>
            <tr>
              <td><strong class="help-split">Phone:</strong><%= Employee.where(id: @salslip.employee_id)[0].phone if @salslip.employee_id %></td>
              <td><strong class="help-split">Joining Date:</strong><%= Employee.where(id: @salslip.employee_id)[0].date_of_join if @salslip.employee_id %></td>
              <td><strong class="help-split">Payment By:</strong><%= @salslip.payment_by %></td>
            </tr>
            <tr>
              <td><strong class="help-split">Department:</strong><%= Department.where(id: @salslip.department_id)[0].name if @salslip.department_id %></td>
              <td><strong class="help-split">Designation:</strong><%= Designation.where(id: @salslip.designation_id)[0].name if @salslip.designation_id %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="panel">
          <div class="panel-heading p-b-none">
            <h4 class="m-b-10"><strong>Payment Details</strong></h4>
          </div>
          <div class="panel-body p-none">
            <table class="table table-condensed">
              <tbody>
                <tr>
                  <td><strong>Basic Salary:</strong> <span class="pull-right"><%= @salslip.basic_salary %></span></td>
                </tr>
                <tr>
                  <td><strong>Overtime Salary:</strong> <span class="pull-right">USD 0 (Hourly)</span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="panel">
          <div class="panel-heading p-b-none">
            <h4 class="m-b-10"><strong>Earning</strong></h4>
          </div>
          <div class="panel-body p-none">
            <table class="table table-condensed">
              <tbody>
                <tr>
                  <td><strong>Net Salary:</strong> <span class="pull-right">USD 0</span></td>
                </tr>
                <tr>
                  <td><strong>TAX:</strong> <span class="pull-right"><%= @salslip.tax %></span></td>
                </tr>
                <tr>
                  <td><strong>Provident Fund:</strong> <span class="pull-right"><%= @salslip.provident_fund %></span></td>
                </tr>
                <tr>
                  <td><strong>Loan:</strong> <span class="pull-right"><%= @salslip.loan %></span></td>
                </tr>
                <tr>
                  <td class="td-highlighted"><strong>Grand Total:</strong> <span class="pull-right"><strong><%= @salslip.grand_total %></strong></span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

