<%= form_for @leave, :url => admin_leaves_path do |form| %>
  <div class="modal-body">
    <div class="form-group">
      <label>Employee</label>
      <%#= form.select :employee_id, Employee.all.map{|d| [d.first_name, d.id]}, class: "form-control selectpicker" %>
    </div>

    <div class="form-group">
        <label>Leave Type</label>
        <%= form.select :leave_type, %w{SickLeave CausalLeave EmergencyLeave}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control', :required => true %>
    </div>

    <div class="form-group">
        <label>Leave From</label>
        <%= form.text_field :leave_from, class: "form-control", "data-provide" => 'datepicker', :required => true %>
       
    </div>

    <div class="form-group">
        <label>Leave To</label>
        <%= form.text_field :leave_to, class: "form-control", "data-provide" => 'datepicker' %>
    </div>

    <div class="form-group">
        <label>Status</label>
        <%= form.select :status, %w{Approved Pending Rejected}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
        </select>
    </div>
      
    <div class="form-group">
        <label>Leave Reason</label>
        <%= form.text_area :reason, class: "form-control" %>
    </div>
  </div>
  <div class="modal-footer">
    <input type="hidden" name="_token" value="ltCweRBS4Hff6nXuisVcqFkG9qL5sBYvKPXFHQgx">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= form.submit "Send" , class: "btn btn-primary pull-right" %>
  </div>
<% end %>