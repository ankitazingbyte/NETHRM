<section class="wrapper-bottom-sec">
  <div class="p-30">
      <h2 class="page-title">Edit leave Application</h2>
  </div>
  <div class="p-30 p-t-none p-b-none">
    <div class="row">
      <div class="col-lg-7">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">Edit leave Application</h3>
          </div>
          <div class="panel-body">
  				  <%= form_for @leave, :url => admin_leafe_path do |form| %>
              <div class="form-group">
                <label>Employee</label>
                <%#= form.select :employee_id, Employee.all.map{|d| [d.first_name, d.id]}, class: "form-control selectpicker" %>
              </div>

              <div class="form-group">
                <label>Leave Type</label>
                <%= form.select :leave_type, %w{SickLeave CausalLeave EmergencyLeave}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
              </div>

              <div class="form-group">
                <label>Leave From</label>
                <%= form.text_field :leave_from, class: "form-control", "data-provide" => 'datepicker'  %>
              </div>

              <div class="form-group">
                <label>Leave To</label>
                <%= form.text_field :leave_to, class: "form-control", "data-provide" => 'datepicker'  %>
              </div>

              <div class="form-group">
                <label>Status</label>
                <%= form.select :status, %w{Approved Pending Rejected}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <label>Leave Reason</label>
                <%= form.text_area :reason, class: "form-control" %>
              </div>
              
              <div class="form-group">
                <%= form.submit "Update", class: "btn btn-primary" %>
              </div>
            <% end %>
  			  </div>
  		  </div>
  	  </div>
    </div>
  </div>
</section>

<%= link_to 'Show', admin_leafe_path(@leave) %> |
<%= link_to 'Back', admin_leaves_path %>
