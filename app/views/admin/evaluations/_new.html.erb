<%= form_for @evaluation, :url => admin_evaluations_path do |form| %>
    <div class="form-group">
        <label>Training Title</label>
        <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>Training Evaluations Description</label>
        <%= form.cktext_area :description, class: "form-control" %>
    </div>
    <%= form.submit "Add", class: "btn btn-success btn-sm pull-right" %>
<% end %>

                               