<p id="notice"><%= notice %></p>

<section class="wrapper-bottom-sec">
  <div class="p-30">
      <h2 class="page-title">Training Needs Assesment</h2>
  </div>
  <div class="p-30 p-t-none p-b-none">
    <div class="row">
          <div class="col-lg-12">
              <div class="panel">
                  <div class="panel-heading">
                      <h3 class="panel-title">Training Needs Assesment</h3>
                      <button class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#add-new-training"><i class="fa fa-plus"></i> Add Training Needs Assesment</button>
                      <br>
                  </div>
                  <div class="panel-body p-none">
                      <table class="table data-table table-hover table-ultra-responsive">
                          <thead>
                          <tr>
                              <th style="width: 10%;">Department</th>
                              <th style="width: 15%;">Training Type</th>
                              <th style="width: 20%;">Training Subject</th>
                              <th style="width: 20%;">Title</th>
                              <th style="width: 10%;">Status</th>
                              <th style="width: 25%;" class="text-right">Actions</th>
                          </tr>
                          </thead>
                          <tbody>
                            <% @assesments.each do |assesment| %>
                              <tr>
                                <td data-label="Department"><p><%= assesment.department_id %></p></td>
                                <td data-label="Training Type"><p><%= assesment.training_type %></p></td>
                                <td data-label="Training Subject"><p><%= assesment.training_subject %></p></td>
                                <td data-label="Title"><p><%= assesment.training_title %></p></td>
                                <td data-label="Status">
                                   <span class="label label-success"><%= assesment.status %></span>
                                </td>
                                <td data-label="Actions" class="text-right">
                                  <%= link_to edit_admin_assesment_path(assesment), class: "btn btn-success btn-xs" do %><i class="fa fa-edit"></i> Edit <% end %>
                                  <%#= link_to assessment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %><i class="fa fa-trash"></i> Delete <%# end %>
                                </td>
                              </tr>
                            <% end %>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="add-new-training" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Add Training Needs Assesment</h4>
                  </div>
                  <%= render "admin/assesments/new" %>
              </div>
          </div>
    </div>
  </div>
</section>
