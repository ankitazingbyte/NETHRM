<section class="wrapper-bottom-sec">
  <div class="p-30">
      <h2 class="page-title">VIEW TRAINER INFO</h2>
  </div>
	<div class="p-30 p-t-none p-b-none">
	    <div class="row">
	      	<div class="col-lg-7">
	          	<div class="panel panel-info">
              		<div class="panel-heading">
				        <h3 class="panel-title"> View Trainer Info</h3>
				    </div>
	              	<div class="panel-body">
						<%= form_for @trainer, :url => admin_trainer_path do |form| %>

						    <div class="form-group">
						        <label>First Name</label>
						        <%= form.text_field :first_name, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>Last Name</label>
						        <%= form.text_field :lastname, class: "form-control" %> 
						    </div>

						    <div class="form-group">
						        <label>Designation</label>
						        <%= form.text_field :designation, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>Organization</label>
						        <%= form.text_field :organization, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>Address</label>
						        <%= form.text_field :address, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>City</label>
						        <%= form.text_field :city, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>State</label>
						        <%= form.text_field :state, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>Zip Code</label>
						        <%= form.text_field :zip_code, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label for="Country">Country</label>
						        <%= form.text_field :country, class: "form-control" %>
						        <%#= form.collection_select :country_id, Country.find(:all), :id, :name, :prompt => "Select a Country" %>
						    </div>

						    <div class="form-group">
						        <label>Email</label>
						        <%= form.text_field :email, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>Phone</label>
						        <%= form.text_field :phone, class: "form-control" %>
						    </div>

						    <div class="form-group">
						        <label>Trainer Expertise</label>
						        <%= form.cktext_area :trainer_expertise, class: "form-control" %>
						    </div>
						    <%= form.submit "Update", class: "btn btn-success btn-sm pull-right"%>
						<% end %>
					</div>
	          	</div>
	      	</div>
	    </div>
	</div>
</section>
<%= link_to 'Show', admin_trainer_path(@trainer) %> |
<%= link_to 'Back', admin_trainers_path %>
