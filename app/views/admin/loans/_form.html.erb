<%= form_for @loan, :url => admin_loans_path do |form| %>
    <div class="modal-body">
        <div class="form-group">
            <label>Employee Name</label>
            <%#= form.select :employee_id, Employee.all.map{|e| [e.user_name, e.id]}, class: "btn dropdown-toggle btn-default" %>      
        </div>

        <div class="form-group">
            <label for="fname">Title</label>
            <%= form.text_field :title, class: "form-control", onKeyPress: "return ValidateAlpha(event);", required: true %>
        </div>

        <div class="form-group">
            <label for="fname">Loan Date</label>
            <%= form.text_field :loan_date, class: "form-control", "data-provide" => 'datepicker', required: true %>
        </div>

        <div class="form-group">
            <label for="fname">Loan Amount</label>
            <%= form.number_field :loan_amount, class: "form-control", required: true %>
        </div>

        <div class="form-group">
            <label>Include Loan Amount in Payslip</label>
            <div class="form-group">
                <div class="coder-radiobox radio-inline">
                    <input type="radio" name="payslip" value="yes" checked><span class="co-radio-ui"></span><label>Yes</label>
                </div>

                <div class="coder-radiobox radio-inline">
                    <input type="radio" name="payslip" value="no"><span class="co-radio-ui"></span><label>No</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="fname">Monthly Repayment Amount</label>
            <%= form.number_field :monthly_payement, class: "form-control", required: true %>
        </div>

        <div class="form-group">
            <label for="fname">Repayment Start Date</label>
            <%= form.text_field :repayment_start_date, class: "form-control", "data-provide" => 'datepicker', required: true %>
        </div>

        <div class="form-group">
            <label>Status</label>
            <%= form.select :status, %w{Pending Ongoing Completed Rejected}, :prompt => 'Select', required: true, placeholder: 'status', class: 'form-control', required: true %>
        </div>

        <div class="form-group">
            <label>Description</label>
            <%= form.cktext_area :description, class: "form-control", required: true %>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" name="_token" value="jK00MQgg8FOpc0dIcjWt6qsmormt4RmcTVwoKBXj">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
<% end %>
<!-- For Alphabates Only -->
<script type="text/javascript">
    function isNumberKey(evt){  <!--Function to accept only numeric values-->
    //var e = evt || window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode
    if (charCode != 46 && charCode > 31 
    && (charCode < 48 || charCode > 57))
        return false;
        return true;
    }
           
    function ValidateAlpha(evt)
    {
        var keyCode = (evt.which) ? evt.which : evt.keyCode
        if ((keyCode < 65 || keyCode > 90) && (keyCode < 97 || keyCode > 123) && keyCode != 32)
         
        return false;
            return true;
    }
</script>
<!-- NUMERIC filed E not allow -->
<script>
    $("input[type='number']").on('keydown',function(e){
        return e.keyCode == 69 ? false : true
    })
</script>