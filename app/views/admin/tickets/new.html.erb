<section class="wrapper-bottom-sec">
  <div class="p-30">
      <h2 class="page-title">Create New Ticket</h2>
  </div>
  <div class="p-30 p-t-none p-b-none">
      <div class="row">
          <div class="col-lg-7">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <h3 class="panel-title">Create New Ticket</h3>
                  </div>
                  <div class="panel-body">
                    <%= form_for @ticket, url: admin_tickets_path do |form| %>
                      <% if @ticket.errors.any? %>
                        <div id="error_explanation">
                          <h2>
                            <%= pluralize(@ticket.errors.count, "error") %> prohibited
                            this ticket from being saved:
                          </h2>
                          <ul>
                            <% @ticket.errors.full_messages.each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                      <div class="form-group">
                          <label for="cid">Ticket For Client</label>
                          <%= form.select :employee_id, Employee.all.map{|e| [e.user_name, e.id]}, class: "form-control selectpicker" %>
                      </div>
                      
                      <div class="form-group">
                          <label for="subject">Subject</label>
                          <%= form.text_field :subject, class: "form-control",required: true, onKeyPress: "return ValidateAlpha(event);"%>
                      </div>

                      <div class="form-group">
                          <label for="message">Message</label>
                          <%= form.cktext_area :message, class: "form-control" %>
                      </div>

                      <div class="form-group">
                          <label for="did">Department</label>
                          <%= form.select :department_id, Department.all.map{|d| [d.name, d.id]}, class: "form-control selectpicker" %>
                      </div>
                      <%= form.submit "Create Ticket", class: "btn btn-success" %>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>
<!-- For Alphabates Only -->
<script type="text/javascript">
    function isNumberKey(evt){  <!--Function to accept only numeric values-->
    //var e = evt || window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode
    if (charCode != 46 && charCode > 31 
    && (charCode < 48 || charCode > 57))
        return false;
        return true;
    }
           
    function ValidateAlpha(evt)
    {
        var keyCode = (evt.which) ? evt.which : evt.keyCode
        if ((keyCode < 65 || keyCode > 90) && (keyCode < 97 || keyCode > 123) && keyCode != 32)
         
        return false;
            return true;
    }
</script>


                                