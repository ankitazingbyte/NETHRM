<section class="wrapper-bottom-sec">
  <div class="p-30">
      <h2 class="page-title">Create New Ticket</h2>
  </div>
  <div class="p-30 p-t-none p-b-none">
      <div class="row">
          <div class="col-lg-7">
              <div class="panel">
                  <div class="panel-heading">
                      <h3 class="panel-title">Create New Ticket</h3>
                  </div>
                  <div class="panel-body">
                    <%= form_for @ticket, url: admin_tickets_path do |form| %>
                      <% if @ticket.errors.any? %>
                        <div id="error_explanation">
                          <h2>
                            <%= pluralize(@ticket.errors.count, "error") %> prohibited
                            this ticket from being saved:
                          </h2>
                          <ul>
                            <% @ticket.errors.full_messages.each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                      <div class="form-group">
                          <label for="cid">Ticket For Client</label>
                          <%= form.select :employee_id, Employee.all.map{|e| [e.user_name, e.id]}, class: "form-control selectpicker" %>
                      </div>
                      
                      <div class="form-group">
                          <label for="subject">Subject</label>
                          <%= form.text_field :subject, class: "form-control" %>
                      </div>

                      <div class="form-group">
                          <label for="message">Message</label>
                          <%= form.cktext_area :message, class: "form-control" %>
                      </div>

                      <div class="form-group">
                          <label for="did">Department</label>
                          <%= form.select :department_id, Department.all.map{|d| [d.name, d.id]}, class: "form-control selectpicker" %>
                      </div>
                      <%= form.submit "Create Ticket", class: "btn btn-success" %>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>



                                