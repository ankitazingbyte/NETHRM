<p id="notice"><%= notice %></p>
<section class="wrapper-bottom-sec">
    <div class="p-30">
        <h2 class="page-title">Employees</h2>
    </div>
    <div class="p-30 p-t-none p-b-none">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Employees</h3>
                    </div>
                    <div class="panel-body p-none">
                        <table class="table data-table table-hover table-ultra-responsive">
                            <thead>
                            <tr>
                                <th style="width: 10%;">Code#</th>
                                <th style="width: 20%;">Name</th>
                                <th style="width: 20%;">Username</th>
                                <th style="width: 20%;">Designation</th>
                                <th style="width: 10%;">Status</th>
                                <th style="width: 20%;">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% @employees.each do |employee| %>
                                    <tr>
                                        <td data-label="SL"><%= employee.id %></td>
                                        <td data-label="Name"><p><%= employee.first_name %><%= employee.last_name %></p></td>
                                        <td data-label="Username"><p><%= employee.user_name %></p></td>
                                        <td data-label="Designation"><p><%= employee.designation_id %></p></td>
                                        <td data-label="Status"><p class="btn btn-success btn-xs">Active</p></td>
                                        <td data-label="Actions">
                                            <%= link_to 'Edit', edit_admin_employee_path(employee), class: "btn btn-success btn-xs" %>
                                            <%= link_to 'Destroy', admin_employee_path(employee), method: :delete,class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>